
<form action="personalInformation" method="POST" class="form-horizontal">
    <div class="form-group">
        <label for="exampleInputEmail1" class="col-sm-2 control-label">loginName</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="loginName" name="loginName">
        </div>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1" class="col-sm-2 control-label">phone</label>
        <div class="col-sm-10">
            <input type="tel" class="form-control" id="exampleInputPassword1" name="phone">
        </div>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1" class="col-sm-2 control-label">email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="exampleInputPassword1" name="email">
        </div>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1" class="col-sm-2 control-label">hashpwd</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="hashpwd">
        </div>

    </div>
    <div class="form-group">
        <label for="exampleInputPassword1" class="col-sm-2 control-label">realName</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="realName">
        </div>

    </div>
    <div class="form-group">
        <label for="exampleInputPassword1" class="col-sm-2 control-label">nickName</label>
        <div class="col-sm-10">
            <input type="text" class="form-control"  name="nickName">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-default" value="Send"/>
        </div>
    </div>
</form>


<ul>
    <li></li>
    <li></li>
    <li></li>
</ul>

{{#section 'customjs'}}
<script>
{{#each user}}
    var _loginName = '{{loginName}}';
    var _srtrd = '{{_id}}';
    localStorage.setItem("loginName",_loginName);
    localStorage.setItem("uid",_srtrd);
{{/each}}

$(function () {
    alert(localStorage.getItem("uid"));
});



</script>
{{/section}}